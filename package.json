{
  "name": "node-ts-typeorm",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "scripts": {
    "build": "node ./node_modules/gulp/bin/gulp build",
    "start": "export NODE_ENV=production && node ./build/index.js",
    "migration-generate": "tsc && ./node_modules/.bin/typeorm migrations:generate -n",
    "migration-run": "tsc && ./node_modules/.bin/typeorm migrations:run",
    "migration-revert": "tsc && ./node_modules/.bin/typeorm migrations:revert"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/glob": "^5.0.35",
    "@types/node": "^8.0.29",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.2.0",
    "gulp-sass": "^4.0.1",
    "gulp-tslint": "^8.1.3",
    "ts-node": "3.3.0",
    "tslint": "^5.10.0",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "class-validator": "^0.8.5",
    "config": "^1.30.0",
    "connect-flash": "^0.1.1",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validator": "^5.2.0",
    "glob": "^7.1.2",
    "mysql": "^2.14.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.1.20"
  }
}
